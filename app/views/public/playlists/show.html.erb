<h2>Event <%= params[:id] %></h2>
<script src="//connect.soundcloud.com/sdk.js"></script>

<div ng-controller="vp.public.Player">

  <p>Now playing:</p>

  <div class="currently-playing-track">
    <p>{{currentTrack.title}}</p>
    <p>{{currentTrack.user.username}}</p>
    <button class="play" ng-click="playSelectedTrack()">Play</button>
    <button class="stop" ng-click="stopPlaying()">Stop</button>
  </div>

  <input type="text" name="search" class="track-search" autocomplete="off"
         ng-model="searchQuery"
         ng-change="findTracks(searchQuery)" />

  <table class="table table-striped table-bordered">
    <tbody>
    <tr ng-repeat="track in tracks">
      <td ng-click="chooseTrack(track)">
        {{ track.title }} ({{ track.user.username }})
      </td>
    </tr>
    </tbody>
  </table>

</div>
